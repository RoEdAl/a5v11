
config interface loopback
	option ifname lo
	option proto static
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'
	option ipv6 0

config interface lan
	list ifname eth0.1
	list ifname eth1
	list ifname usb0
	option force_link 1
	option macaddr '02:12:00:01:4f:24'
	option type bridge
	option proto static
	option ipaddr '10.0.0.1'
	option netmask '255.255.255.0'
        option gateway '192.168.1.254'
	option ipv6 0

config interface wwan
	option proto dhcp
	option ipv6 0

config interface stabridge
        option proto relay
        list network lan 
        list network wwan
	option ipv6 0

config switch
	option name switch0
	option reset 1
	option enable_vlan 1

config switch_vlan
	option device switch0
	option vlan 1
	option ports '0 6t'

config switch_port
        option device switch0
        option port 0
        option pvid 1

